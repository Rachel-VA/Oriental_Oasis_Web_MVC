@{
    ViewData["Title"] = "Company List";
}

<div class="card shadow border-0 my-4">
    <div class="card-header m-lg-0 py-3" style="background-color:black;">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="py-2" style="color:#ffc107;">Company List</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="container">
            <div class="row pd-3">
                <div class="col-6"></div>
                <div class="col-6 text-end">
                    <a asp-controller="Company" asp-action="UpSert" class="btn btn-primary" style="background-color:black; color:#ffc107;">
                        Create New Company <i class="bi bi-plus-square"></i>
                    </a>
                </div>
            </div>
            <table id="myTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Company Name</th>
                        <th>Street Address</th>
                        <th>City</th>
                        <th>State</th>
                        <th>Postal Code</th>
                        <th>Phone Number</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Data will be populated by DataTables via AJAX -->
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}
