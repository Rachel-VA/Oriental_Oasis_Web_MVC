@*Create a model form and button to accept user input*@
@model Product


<div class=" card shadow border-0 my-4">
	<div class="card-header m-lg-0 py-3" style="background-color:black;">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2" style="color:#ffc107;"> Delete Product</h2>
			</div>
		</div>
	</div>

	<div class="card-body py-4">
		<form method="post">
			<input asp-for="Cat_Id" hidden />
			<div class="border p-3 mt-4">
				
				<div class="form-floating py-2 col-12">
					<input asp-for="ItemName" disabled class="form-control border-0 shadow" />
					<label asp-for="ItemName" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Description"disabled class="form-control border-0 shadow" />
					<label asp-for="Description" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ItemNumber" disabled class="form-control border-0 shadow" />
					<label asp-for="ItemNumber" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Origin" disabled class="form-control border-0 shadow" />
					<label asp-for="Origin" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="ListPrice" disabled class="form-control border-0 shadow" />
					<label asp-for="ListPrice" class="ms-2"></label>					
				</div>


				<div class="form-floating py-2 col-12">
					<input asp-for="Price" disabled class="form-control border-0 shadow" />
					<label asp-for="Price" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price50" disabled class="form-control border-0 shadow" />
					<label asp-for="Price50" class="ms-2"></label>					
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="Price100" disabled class="form-control border-0 shadow" />
					<label asp-for="Price100" class="ms-2"></label>					
				</div>


				@*Buttons to submit and go back to previous page*@
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="Submit" class="btn btn-danger form-check-control" style="width:200px">Delete</button>
					</div>
					<div class="col-6 cold-md-3">
						<a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:200px">
							Back to List
						</a>
					</div>
				</div>



			</div>

		</form>
	</div>
</div>





