@*Create a model form and button to accept user input*@
@model Category

<div class=" card shadow border-0 mt-4">
	<div class="card-header m-lg-0 py-3" style="background-color:black;">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2" style="color:#ffc107;"> Edit Category</h2>
			</div>
		</div>
	</div>

	<div class="card-body py-4">
		<form method="post">
			<input asp-for="Cat_Id" hidden />
			<div class="border p-3 mt-4">
				
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"></label>
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				@*Buttons to submit and go back to previous page*@
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="Submit" class="btn btn-primary form-check-control" style="width:200px">Update</button>
					</div>
					<div class="col-6 cold-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:200px">
							Back to List
						</a>
					</div>
				</div>



			</div>

		</form>
	</div>
</div>



@*Validate client side using the validationScriptionPartial provided by the framework*@
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


