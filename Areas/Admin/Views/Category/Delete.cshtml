@*Create a model form and button to accept user input*@
@model Category


<div class=" card shadow border-0 mt-4">
	<div class="card-headerm-lg-0 py-3" style="background-color:black;>
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2" style="color:#ffc107";> Delete Category</h2>
			</div>
		</div>
	</div>

	<div class="card-body py-4">
		<form method="post">
			<input asp-for="Cat_Id" hidden />
			<div class="border p-3 mt-4">
				
				<div class="form-floating py-2 col-12">
					<input asp-for="Name" disable class="form-control border-0 shadow" />
					<label asp-for="Name" class="ms-2"></label>	
				</div>

				<div class="form-floating py-2 col-12">
					<input asp-for="DisplayOrder" disable class="form-control border-0 shadow" />
					<label asp-for="DisplayOrder" class="ms-2"></label>
				</div>

				@*Buttons to submit and go back to previous page*@
				<div class="row mt-3">
					<div class="col-6 col-md-3">
						<button type="Submit" class="btn btn-danger form-check-control" style="width:200px">Delete</button>
					</div>
					<div class="col-6 cold-md-3">
						<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control" style="width:200px">
							Back to List
						</a>
					</div>
				</div>



			</div>

		</form>
	</div>
</div>





